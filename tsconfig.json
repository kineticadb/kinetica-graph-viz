{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build/types",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src/lib"],
  "exclude": ["src/lib/**/tests"]
}
